@model pc01.Models.Producto
@{
    ViewData["Title"] = "Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Formulario</h1>

    <form asp-controller="Producto" asp-action="Edit">
        <input type="hidden" asp-for="id" />

        <div class="mb-3">
            <label asp-for="name" class="form-label">Nombre</label>
            <input asp-for="name" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="categoria" class="form-label">Categoria</label>
            <input asp-for="categoria" type="text" class="form-control" >
        </div>
        <div class="mb-3">
            <label asp-for="precio" class="form-label">Precio</label>
            <input asp-for="precio" type="number" step="0.1" class="form-control" >
        </div>
        <div class="mb-3">
            <label asp-for="descuento" class="form-label">Descuento</label>
            <input asp-for="descuento" type="number" step="0.1" class="form-control">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Regresar al listado</a>
    </div>
</div>