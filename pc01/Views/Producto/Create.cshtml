@model pc01.Models.Producto
@{
    ViewData["Title"] = "Producto";
}

<div class="text-center">
    
    <div class="container">
        
        <div class="row">
            <div class="col-8">
                <h1>@ViewData["Title"]</h1>
                <form asp-controller="Producto" asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="name" class="form-label">Nombre</label>
                        <input asp-for="name" type="text" class="form-control" placeholder="Nombre del producto">
                    </div>
                    <div class="mb-3">
                        <label asp-for="categoria" class="form-label">Categoria</label>
                        <input asp-for="categoria" type="text" class="form-control" placeholder="Categoria del producto">
                    </div>
                    <div class="mb-3">
                        <label asp-for="precio" class="form-label">Precio</label>
                        <input asp-for="precio" type="number" step="0.1" class="form-control" placeholder="Ingrese el precio">
                    </div>
                    <div class="mb-3">
                        <label asp-for="descuento" class="form-label">Descuento</label>
                        <input asp-for="descuento" type="number" step="0.1" class="form-control" placeholder="Ingrese el descuento">
                    </div>
                    <button type="submit" class="btn btn-success">Crear</button>
                    </form>
                    <h1>@ViewData["Message"]</h1>
                    <div>
                        <a asp-action="Index">Regresar al listado</a>
                    </div>

            </div>
        </div>
    </div>

</div>